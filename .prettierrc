{
	"requirePragma": false,
	"insertPragma": false,
	"checkIgnorePragma": true,
	"printWidth": 9999,
	"endOfLine": "lf",
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"quoteProps": "consistent",
	"arrowParens": "avoid",
	"objectWrap": "preserve",
	"proseWrap": "preserve",
	"singleAttributePerLine": false,
	"htmlWhitespaceSensitivity": "css",
  	"vueIndentScriptAndStyle": true,
  	"embeddedLanguageFormatting": "auto",
  	"overrides": [
    	{
			"files": "*.html",
      		"options": {
        		"singleQuote": false
      		}
    	},
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
    	}
  	]
}
